@prefix glosis_lh: <http://w3id.org/glosis/model/layerhorizon/> .
@prefix she: <https://soilwise-he.github.io/soil-health#> .
@prefix glosis_cl: <http://w3id.org/glosis/model/codelist/> .
@prefix glosis_proc: <http://w3id.org/glosis/model/procedure/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix sosa: <http://www.w3.org/ns/sosa/> .

she:SoilProperty a owl:Class .

she:SoilPhysicalProperty a owl:Class ;
    rdfs:subClassOf she:SoilProperty .

she:BulkDensity a owl:Class ;
    rdfs:subClassOf she:SoilPhysicalProperty .

she:BulkDensityFineEarthConcept a owl:Class ;
    rdfs:subClassOf she:BulkDensity .

she:BulkDensityPeatConcept a owl:Class ;
    rdfs:subClassOf she:BulkDensity .

glosis_lh:BulkDensityPeat a owl:Class ;
        rdfs:label "BulkDensityPeat"@en ;
        rdfs:comment "This is the bulk density measurement of peat soils, which are rich in organic matter. Peat soils have very low bulk density due to their high porosity and organic composition. Source: Soil Classification: A Global Desk Reference (Eswaran et al., 2003)." ;
        skos:definition "Guidelines for Soil Description issued by the FAO: table 59,3"@en ;
        rdfs:subClassOf  sosa:Observation ;
        rdfs:subClassOf [ a owl:Restriction ; owl:onProperty sosa:hasFeatureOfInterest ; owl:allValuesFrom [owl:unionOf (glosis_lh:GL_Layer glosis_lh:GL_Horizon) ] ] ;
  			rdfs:subClassOf [ a owl:Restriction ; owl:onProperty sosa:hasResult ; owl:someValuesFrom glosis_cl:BulkDensityPeatValueCode ] ;
  			rdfs:subClassOf [ a owl:Restriction ; owl:onProperty sosa:observedProperty ; owl:hasValue glosis_lh:bulkDensityPeatProperty ] .

glosis_lh:bulkDensityPeatProperty a sosa:ObservableProperty ;
        rdfs:label "bulkDensityPeatProperty"@en ;
        rdfs:comment "The Bulk Density of Peat measures the mass of dry organic soil (peat) per unit volume. Peat soils typically have low bulk density due to their high organic matter content and porosity, which significantly affects their water retention and drainage characteristics. Source: Rydin, H., & Jeglum, J. (2006). The Biology of Peatlands." ;
        skos:definition "Guidelines for Soil Description issued by the FAO: table 59,3"@en .

glosis_lh:bulkDensityPeatProperty a she:BulkDensityPeatConcept .

glosis_lh:BulkDensityFineEarth  a owl:Class ;
        rdfs:label "BulkDensityFineEarth"@en ;
        rdfs:comment "Bulk density of fine earth is the mass of dry soil divided by the volume it occupies, excluding coarse fragments (particles >2 mm). It influences root growth, water movement, and porosity. Source: Hillel, D. (2004). Soil Physics." ;
        skos:definition "ISRIC Report 2019/01: Tier 1 and Tier 2 data in the context of the federated Global Soil Information System. Appendix 3"@en ;
        rdfs:subClassOf  glosis_lh:PhysioChemical ;
        rdfs:subClassOf [ a owl:Restriction ; owl:onProperty
            sosa:hasResult ; owl:allValuesFrom glosis_lh:BulkDensityFineEarthValue ] ;
        rdfs:subClassOf [ a owl:Restriction ; owl:onProperty
            sosa:observedProperty ; owl:hasValue glosis_cl:physioChemicalPropertyCode-BulDfine ] ;
        rdfs:subClassOf [ a owl:Restriction ; owl:onProperty
            sosa:usedProcedure ; owl:someValuesFrom glosis_proc:BulkDensityFineEarthProcedure ] .

glosis_cl:physioChemicalPropertyCode-BulDfine a she:BulkDensityFineEarthConcept .

glosis_proc:BulkDensityFineEarthProcedure a owl:Class ;
    rdfs:label "Procedures for BulkDensityFineEarth - codelist class"@en ;
    rdfs:comment "This code list provides analysis procedures for BulkDensityFineEarth."@en ;
    rdfs:seeAlso glosis_proc:bulkDensityFineEarthProcedure ;
    rdfs:subClassOf skos:Concept,
        sosa:Procedure ;
    owl:oneOf ( glosis_proc:bulkDensityFineEarthProcedure-BlkDensF_fe-co-od glosis_proc:bulkDensityFineEarthProcedure-BlkDensF_fe-co-unkn glosis_proc:bulkDensityFineEarthProcedure-BlkDensF_fe-unkn-od glosis_proc:bulkDensityFineEarthProcedure-BlkDensF_fe-co-fc glosis_proc:bulkDensityFineEarthProcedure-BlkDensF_fe-rpl-unkn glosis_proc:bulkDensityFineEarthProcedure-BlkDensF_fe-cl-unkn glosis_proc:bulkDensityFineEarthProcedure-BlkDensF_fe-unkn-fc glosis_proc:bulkDensityFineEarthProcedure-BlkDensF_fe-cl-od glosis_proc:bulkDensityFineEarthProcedure-BlkDensF_fe-cl-fc glosis_proc:bulkDensityFineEarthProcedure-BlkDensF_fe-unkn ) .

she:BlkDensF_fe-co-unkn_Concept a owl:Class ;
    rdfs:subClassOf she:BulkDensityFineEarthConcept .

she:blkDensF_fe-co-unkn_Property a owl:NamedIndividual ,
                              sosa:ObservableProperty ,
                              she:BlkDensF_fe-co-unkn_Concept .

she:blkDensF_fe-co-unkn_Property skos:related glosis_proc:bulkDensityFineEarthProcedure-BlkDensF_fe-co-unkn .
